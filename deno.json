{
  "test": {
    "files": {
      "include": ["tests/"]
    }
  },
  "tasks": {
    "start": "deno run --allow-all src/shelly.ts"
  },
  "lint": {
    "files": {
      "include": ["src/"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": []
    }
  },

  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 70,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    },

    "files": {
      "exclude": [
        ".vacode",
        ".idea",
        ".fleet",
        ".git"
      ]
    }
  },

  "compilerOptions": {
    "allowJs": false,
    "strict": true,
    "alwaysStrict": true,
    "useUnknownInCatchVariables": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": true
  }
}
